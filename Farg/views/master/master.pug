body.hold-transition.skin-blue.sidebar-mini(ng-app="currentApp", ng-controller="masterCtrl", onload="page.start()")
    div
        a(ng-click="teste()") Teste
    div.wrapper
        block nav
            header.main-header
                a.logo(href="/")
                    span.logo-mini FA
                    span.logo-lg Farg Camisaria
                //Cabeçalho Master
                //div.jumbotron
                    div.container.text-center
                        img.img-responsive(src="/images/fargLogo.png", alt="Logo Farg")  

                //Menu Geral
                    
                nav.navbar.navbar-static-top(id="myNavbar")
                    a.sidebar-toggle(data-toggle="push-menu", role="button")
                        span.sr-only
                    
                    div.navbar-custom-menu
                        ul.nav.navbar-nav
                            li.dropdown(ng-show="user.isClient")
                                a.dropdown-toggle(data-toggle="dropdown", href="#")
                                    span.glyphicon.glyphicon-shopping-cart
                                ul.dropdown-menu
                                    li
                                        a(href="/client/car") Meu carrinho
                            //User Account Menu
                            li.dropdown.user.user-menu
                                //Menu Toggle Button
                                a.dropdown-toggle(href="#", data-toggle="dropdown")
                                    //The user image in the navbar
                                    img.user-image(src="https://almsaeedstudio.com/themes/AdminLTE/dist/img/user2-160x160.jpg", alt="Imagem Usuário")
                                    //hidden-xs hides the username on small devices so only the image appears.
                                    span.hidden-xs {{user.clientName}}
                                ul.dropdown-menu
                                    //The user image in the menu
                                    li.user-header
                                        img.img-circle(src="https://almsaeedstudio.com/themes/AdminLTE/dist/img/user2-160x160.jpg", alt="User Image")
                                        p {{user.clientName}}
                                            small {{user.clientMail}}
                                        ///.row
                                    //Menu Footer
                                    li.user-footer                                        
                                        div.pull-right
                                            a.btn.btn-default.btn-flat(href="/logout") Sair
            aside.main-sidebar
                section.sidebar                    
                    ul.sidebar-menu.tree(data-widget="tree")
                        li.header FUNÇÕES                        
                        li.treeview(ng-show="user.isAdmin || user.isAgent")
                            a(href="#") 
                                i.fa.fa-edit
                                span Cadastros
                                span.pull-right-container
                                    i.fa.fa-angle-left.pull-right
                            ul.treeview-menu
                                li(ng-show="user.isAdmin")
                                    a(href="/basicregistration/users") Usuários                                       
                                li
                                    a(href="/basicregistration/clients") Clientes
                                li(ng-show="user.isAdmin")
                                    a(href="/basicregistration/grades") Grades
                                li(ng-show="user.isAdmin")
                                    a(href="/basicregistration/form-payments") Formas Pagamento
                                li(ng-show="user.isAdmin")
                                    a(href="/basicregistration/categorys") Categorias
                                li(ng-show="user.isAdmin")
                                    a(href="/basicregistration/products") Produtos
                        li.treeview
                            a(href="#") 
                                i.fa.fa-search
                                span Consultas
                                span.pull-right-container
                                    i.fa.fa-angle-left.pull-right
                            ul.treeview-menu
                                li
                                    a(href="/consult/request") Pedidos
                        li(ng-show="user.isClient")
                            a(href="/client/products")
                                i.fa.fa-link
                                span Catálogo
                    block custom-sidebar
                        
        div.content-wrapper
            section.content.box
                block content
                div.overlay(ng-class="overlayState")
                    i.fa.fa-refresh.fa-spin
        footer.main-footer
            div.pull-right.hidden-xs.
                design by Jonas Stasiak
            strong Copyright &copy; Farg Camisaria.                
            span  All rights reserved.&nbsp
                i.fa.fa-whatsapp  
                strong &nbsp(47) 9 8802-8615
                

        div
            div.message-user(uib-alert, ng-repeat="alert in _alerts", dismiss-on-timeout="{{alert.timeout}}", ng-class="'alert-' + (alert.typeMessageUser || 'warning')", close="closeMessageUser($index)") {{alert.messageUser}}
            
