div.panel.panel-default
    div.table-responsive.table-large
        table.table.table-hover.table-striped.table-condensed(ng-controller="tblImageProducts", ng-model="dtImageProducts")
            thead
                tr
                    th.col-sm-3-grid
                        button.btn-find-min(type="button", ng-click="findImageProduct()", title="Encontrar")
                    th.col-sm-3-grid 
                        button.btn-add-min(type="button", ng-click="newImageProduct()", title="Nova Imagem")
                    th.col-sm-4-grid(header-grid, header-text="Código", field-order="code", width="75")
                    th.col-sm-4-grid(header-grid, header-text="Ativo", field-order="isActive") 
            tbody
                tr(ng-repeat="imageProduct in dtImageProducts.List")
                    td
                        button.btn-dele-min(type="button", ng-click="deleteImageProduct(imageProduct)", title="Excluir Imagem") 
                    td
                        button.btn-edit-min(type="button", ng-click="editImageProduct(imageProduct)", title="Editar Imagem") 
                    td.align-rigth {{imageProduct.code}}
                    td {{imageProduct.idcActive}}                    

    ul.pagination-sm.pager-style(uib-pagination, total-items="getPagerInfo('pgImageProduct').bigTotalItems", ng-model="getPagerInfo('pgImageProduct').bigCurrentPage"
    , max-size="5", boundary-links="true", force-ellipses="true", boundary-link-numbers="true", items-per-page="itemsPerPage", ng-change="pageChanged('pgImageProduct')")

    div.modal-demo
        script(type="text/ng-template", id="myImageProduct.html")
            div.modal-header
                h3.modal-title {{titleModal}}
            div.modal-body(id="modal-body")
                form.form-horizontal(name="frmImageProduct")
                    div.form-group
                        label.control-label.col-sm-4 Código
                        div.col-sm-7
                            input.form-control(type="number", name="iptCode", ng-model="code", ng-disabled="!isFind")
                    
                    div.form-group
                        label.control-label.col-sm-4 Imagem
                        div.col-sm-7
                            input(type="file", id="iptImage", multiple)
                            button(ng-click="uploaderCtrl.upload_file()") Carregar
                            button(ng-click="uploaderCtrl.clean_files()") Remover

                    div.form-group
                        label.control-label.col-sm-4(for="dbStatus") Situação
                        div.col-sm-7
                            select.form-control(id="dbStatus", name="dbStatus", ng-model="idcActive", ng-required="!isFind")
                                option(ng-repeat="status in statusOptions", value="{{status.domainValue}}" ) {{status.domainMeaning}}
                            span(ng-show="frmImageProduct.dbStatus.$touched && frmImageProduct.dbStatus.$invalid") 'Situação' é um campo de preenchimento obrigatório
                            
            div.modal-footer
                button.btn.btn-primary(type="button", ng-click="save(frmImageProduct)", ng-disabled="frmImageProduct.$invalid", ng-show="!isFind") Salvar
                button.btn.btn-primary(type="button", ng-click="save(frmImageProduct)", ng-show="isFind") Buscar
                button.btn.btn-warning(type="button", ng-click="cancel()") Cancelar