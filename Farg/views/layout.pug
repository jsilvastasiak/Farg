doctype html
html(ng-app="LayoutApp")
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    //JQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js')
    //AngularJS
    script(src='/lib/angular/angular.js')
    //Boostrap
    script(src='/lib/bootstrap/bootstrap.min.js')
    //Controle da Página
    script(src='/javascripts/layout.js')

  body
    block content
        div.container-fluid
            h1 My First Bootstrap Page
            p This part is inside a .container-fluid class.
            p The .container-fluid class provides a full width container, spanning the entire width of the viewport.
        div.container-fluid
            label Name:&nbsp
            input(type="text", ng-model="yourName", placeholder="Enter a name here")
        hr
        h1(ng-controller="HelloCtrl") {{message}} {{yourName}}!             